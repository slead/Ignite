= simple_form_for(@video, html: { class: 'form' })  do |f|
  .form-group
    - if current_user.admin?
      %p
        Status:
      = f.collection_radio_buttons :status, [['published', 'published'] ,['draft', 'draft']], :first, :last,  :input_html => {style:'display:block', class: "response-project"}
    %hr
    =f.input :title,  input_html: { class: 'form-control' }, placeholder: "Enter the video's title"
    =f.input :url, input_html: { class: 'form-control' }, placeholder: "Enter the URL (in the format https://www.youtube.com/watch?v=YOUTUBE_ID)"
    =f.input :speaker_name, input_html: { class: 'form-control' }, placeholder: "Enter the speaker's name"
    =f.input :speaker_url, input_html: { class: 'form-control' }, placeholder: "Enter the speaker's URL (eg Twitter, blog, etc)"
    %hr
    %p
      Ignite event:
      =f.collection_select :event_id, Event.all.order(:name), :id, :name, prompt: "Filmed at...", required: :true
    %p
      Tags:
      =f.collection_check_boxes :tag_ids, Tag.all.order(:name), :id, :name
  =f.submit class: "btn btn-warning"