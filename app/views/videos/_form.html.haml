= simple_form_for(@video, html: { class: 'form' })  do |f|
  .form-group
    - if current_user.admin?
      -if @video.id.present?
        %h4 Status
        .btn-group
          = f.collection_radio_buttons :status, [['published', 'published'] ,['draft', 'draft'],['rejected', 'rejected']], :first, :last,  :input_html => {style:'display:block', class: "radio"}
    %hr
    .row
      .col-md-10
        =f.input :url, input_html: { class: 'form-control' }, placeholder: "Enter the URL (in the format https://www.youtube.com/watch?v=YOUTUBE_ID)"
      .col-md-2
        %btn.btn.btn-warning.top-25#btnYouTubeRetrieve{:data => {:toggle => "tooltip"}, :title => "Enter the URL, then retrieve title and description from YouTube"} Get info
    .row.details
      .col-md-12
        =f.input :title,  input_html: { class: 'form-control' }, placeholder: "Enter the video's title"
        =f.input :description,  input_html: { class: 'form-control' }, placeholder: "Enter the video's description (leave blank to import from YouTube)"
        =f.input :speaker_name, input_html: { class: 'form-control' }, placeholder: "Enter the speaker's name"
        =f.input :speaker_url, input_html: { class: 'form-control' }, placeholder: "Enter the speaker's URL (eg Twitter, blog, etc)"
        %hr
        %p
          Ignite event:
          =f.collection_select :event_id, Event.all.order(:name), :id, :name, {prompt: "Filmed at..."}, {class: 'form-control select' }
        %p
          Tags:
          =f.collection_check_boxes :tag_ids, Tag.all.order(:name), :id, :name
        =f.submit class: "btn btn-warning"
        =link_to root_path do
          %btn.btn.btn-default Cancel