.container.top-150
  .row 
    .col-md-12
      %h1= @video.title
      %p
        Filmed at
        = @video.event_id
      %p= @video.url

    - if user_signed_in?
      #me
        = link_to edit_video_path(@video), class: "light btn-edit" do
          %i.fa.fa-pencil-square-o
        = link_to video_path(@video), method: :delete, class: "light btn-delete", data: {confirm: "Are you sure you want to delete this video?"} do
          %i.fa.fa-times