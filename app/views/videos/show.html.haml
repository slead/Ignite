.container.top-150
  .row 
    .col-md-12
      %h3= @video.title
      %p
        Filmed at
        = link_to @video.event.name, @video.event
      %iframe{src: @video.url, width: '100%', height: '800px'}
      %p.small.right= link_to "View on YouTube", @video.url

    -if not @video.tags.empty?
      .row 
        .col-md-8.col-md-offset-3
          .tags
            %i.fa.fa-tag
            %span= @video.tags.map(&:name).join(", ").titleize

    - if user_signed_in?
      .row.right
        .user
        = link_to edit_video_path(@video), class: "light btn-edit" do
          %i.fa.fa-pencil-square-o
        = link_to video_path(@video), method: :delete, class: "light btn-delete", data: {confirm: "Are you sure you want to delete this video?"} do
          %i.fa.fa-times