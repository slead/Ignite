.container
  .row
    .col-md-8.col-md-offset-2
      %h2.center Featured Ignite videos
  .row
    - @videos.each do |video|
      .col-md-6
        %iframe{src: video.url, width: '100%', height: '400px'}
        %h4= link_to video.title, video
        %span
          Filmed at
          = link_to video.event.name, event_page_path(video.event)
        %hr

.container
  .row
    .col-md-8.col-md-offset-2.center
      - @tags.each do |tag|
        %button.btn.btn-default
          =link_to tag.name.titleize, videos_path(tag: tag.name)
      %button.btn.btn-default
        =link_to "Clear", videos_path