.container.top-150
  .row 
    .col-md-8.col-md-offset-2
      .panel
        .panel-heading Edit video
        .panel-body
          = render 'form'
      %hr
        %button.btn
          = link_to "Back to video page", video_path
        %button.btn
          = link_to "Delete video", video_path(@video), method: :delete, data: {confirm: "Are you sure you want to delete this video?"}
        %button.btn
          = link_to "Back to Admin page", admin_path