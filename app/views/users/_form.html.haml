= simple_form_for(@user, html: { class: 'form' })  do |f|
  .form-group
    =f.input :admin
    %hr
    .row
      .col-md-10
        =f.input :name, input_html: { class: 'form-control' }, placeholder: "User's name", label: 'Name (required)'
    .row
      .col-md-12
        =f.input :email,  input_html: { class: 'form-control' }, placeholder: "Email address", label: 'Email address (required)'
        %hr
        =f.submit class: "btn btn-warning top-15"
        =link_to root_path do
          %btn.btn.btn-default.top-15 Cancel