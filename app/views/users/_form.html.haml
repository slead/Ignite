= simple_form_for(@user, html: { class: 'form' })  do |f|
  .form-group
    .row
      .col-md-10
        =f.input :email, input_html: { class: 'form-control' }, placeholder: "Enter the user's email address", label: 'Email address (required)'
    .row
      .col-md.10        
        =f.input :password, input_html: { class: 'form-control' }, placeholder: "Enter the user's password", label: 'Password (required)'
    .row
      .col-md-10
        =f.submit class: "btn btn-warning top-15"