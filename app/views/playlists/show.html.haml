.container-fluid.top-150
  - if can? :update, @playlist
    .row.right
      .col-md-8.user
      = link_to edit_playlist_path(@playlist), class: "light btn-edit" do
        %i.fa.fa-pencil-square-o
      = link_to playlist_path(@playlist), method: :delete, class: "light btn-delete", data: {confirm: "Are you sure you want to delete this playlist?"} do
        %i.fa.fa-times
  .row 
    .col-md-12.col-lg-10.col-lg-offset-1
      %h3= @playlist.name
      - @videos.each_slice(3) do |vids|
        .row.top-15
          -vids.each do |video|
            .col-md-4.video_thumbnail
              %span= thumbnail(video, 'video_rating_small', 60)

              %p.title
                -if not video.speaker_name.blank?
                  - if not video.speaker_url.blank?
                    by
                    = link_to video.speaker_name, video.speaker_url
                  - else
                    = "by #{video.speaker_name}"
              %p.subtitle
                Filmed at
                = link_to video.event.name, event_page_path(video.event)
        / %span#social-share-span
        /   = social_share_button_tag(video.title, 'data-twitter-title' => truncate(video.title, :length => 50), via: "IgniteTalks")
        / .embed-container
        /   =embed(video.uid)
        / .stats.right
        /   %i.fa.fa-youtube-play
        /   %span.right-15= number_with_delimiter(video.views, :delimiter => ',')
        /   %i.fa.fa-thumbs-o-up
        /   %span.right-15= number_with_delimiter(video.likes, :delimiter => ',')
        /   %i.fa.fa-thumbs-o-down.left-5
        /   = number_with_delimiter(video.dislikes, :delimiter => ',')
          