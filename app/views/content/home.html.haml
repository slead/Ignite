#banner
  =image_tag "header-bg.png"

.container
  .row
    .col-md-9
      %h3 Latest video
      %iframe{src: @first_video.url, width: '100%', height: '400px'}
      %h4= link_to @first_video.title, @first_video
      %p
        Filmed at
        = link_to @first_video.event.name, @first_video.event
    .col-md-3.sidebar
      .social.center
        = link_to "https://twitter.com/ignite" do
          %i.fa.fa-twitter.fa-2x
        = link_to "https://www.facebook.com/ignite" do
          %i.fa.fa-facebook.fa-2x
        = link_to "https://plus.google.com/ignite" do
          %i.fa.fa-google-plus.fa-2x
        = link_to "https://www.youtube.com/ignite" do
          %i.fa.fa-youtube.fa-2x

      .upcoming  
        %h3.center Upcoming events
        %ul
          -@upcomings.each do |upcoming|
            %li
              = link_to upcoming.name, upcoming.event
              = "(#{upcoming.date.to_formatted_s(:rfc822)})"
        %p.bottom= link_to "Let us know about an upcoming event!", root_path

  .row
    .col-md-12
      %h4 Recent videos
  .row
    -@videos.each do |video|
      .col-md-3
        %iframe{src: video.url, width: '100%', height: '250px'}
        %p= link_to video.title, video
        %p.grey
          Filmed at
          = link_to video.event.name, video.event
        %hr
  .row
    .col-md-12
      %h5= link_to "Browse all videos", videos_path