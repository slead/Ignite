= simple_form_for(@event, html: { class: 'form' })  do |f|
  .form-group
    =f.input :name,  input_html: { class: 'form-control' }, placeholder: "Enter the event's full name (eg Ignite Seattle)"
    =f.input :city, input_html: { class: 'form-control' }, placeholder: "Enter the city (eg Seattle)"
    / =f.input :country, input_html: { class: 'form-control' }, placeholder: "Enter the country (eg USA)"
    =f.input :url, input_html: { class: 'form-control' }, placeholder: "Enter the event's homepage (eg http://www.igniteseattle.com)"
    =f.input :twitter_name, input_html: { class: 'form-control' }, placeholder: "Enter the Twitter name (eg igniteseattle)"
  =f.submit class: "btn btn-warning"
  =link_to root_path do
    %btn.btn.btn-default Cancel