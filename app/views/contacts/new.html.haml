.container.index
  .row.top-50
    .col-md-6.col-md-offset-4
      %h1#page_title Say hello or send feedback
      = simple_form_for(@contact, html: { class: 'form' })  do |f|
        =f.input :name,  input_html: { class: 'form-control' }, placeholder: "Your name", required: true
        =f.input :email, input_html: { class: 'form-control'}, placeholder: 'Your email', required: true
        =f.text_area :message, input_html: { class: 'form-control message', rows: 15 }, placeholder: 'Enter your message', required: true
        .hidden
          =f.input :page_url, input_html: { class: 'form-control'}, placeholder: 'page URL', value: @contact.page_url
          =f.input :nickname, input_html: { class: 'form-control'}, placeholder: 'leave this blank'
        =f.submit 'Send message', class: "btn btn-warning"
